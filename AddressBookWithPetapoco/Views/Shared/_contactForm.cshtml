@using ContactService.Models
@using PagedList;
@model Contact
@{
    ViewBag.Title = "ContactForm";
    List<Contact> contacts = ViewBag.contactList;
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" id="id" />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="formElement">
            @Html.LabelFor(model => model.Name, new { @class = "nameLabel" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            <div>
                @Html.EditorFor(model => model.Name)

            </div>
        </div>

        <div class="formElement">
            @Html.LabelFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            <div>
                @Html.EditorFor(model => model.Email)

            </div>
        </div>
        <div id="contact-number">
            <div class="formElement">
                @Html.LabelFor(model => model.Mobile)
                @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                <div>
                    @Html.EditorFor(model => model.Mobile)
                </div>
            </div>

            <div class="formElement">
                @Html.LabelFor(model => model.Landline)
                @Html.ValidationMessageFor(model => model.Landline, "", new { @class = "text-danger" })
                <div>
                    @Html.EditorFor(model => model.Landline)
                </div>
            </div>
        </div>
        <div class="formElement">
            @Html.LabelFor(model => model.Website)
            @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
            <div>
                @Html.EditorFor(model => model.Website)
            </div>
        </div>

        <div class="formElement">
            @Html.LabelFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            <div>
                @Html.EditorFor(model => model.Address)
            </div>
        </div>

        <div class="formElement buttons">
            <div>
                <a  id="cancel">Cancel</a>
                <button type="submit" class="btn btn-success"></button>
            </div>
        </div>
    </div>
}
